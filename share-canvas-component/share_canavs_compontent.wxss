.canvas-box{
  position: relative;
  width: 100%;
  height: 100%;
}
.canvas-content{
  position: absolute;
  background: #fff;
  bottom: 0;
  width: 100%;
  color:#000;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 80rpx;
  padding-top: 50rpx;
}
.close-button{
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  width: 80rpx;
  height: 80rpx;
  z-index: 30;
  display: flex;
  justify-content: flex-end;
}
.close-button>image{
  display: block;
  width: 30rpx;
  height: 30rpx;
}
.canvas{
  width: 100%;
  min-height:0;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
}
.canvas canvas{
  margin: 0 auto;
  position: absolute;
  top: 0;
  z-index: -1;
  opacity: 0;
  left: 55555rpx;
}
.canvas .canvas-image{
  width: 400rpx;
  border-radius: 10rpx;
  margin: 20rpx auto 50rpx;
  display: block;
  overflow: hidden;
  box-shadow: 0 0 12rpx 0 rgba(183, 183, 183, 0.8);
  position: relative;
  min-height: 519.168rpx;
}
.canvas-image .def{
  position: absolute;
  width: 100%;
  top: 0;
  opacity: 0.1;
  left: 0;
}
.canvas image{
  width: 100%;
}
.save-button{
  width: 200rpx;
  height: 55rpx;
  line-height: 55rpx;
  background:#333;
  color: #fff;
  text-align: center;
  font-size: 28rpx;
  border-radius: 10rpx;
  font-weight: bold;
  box-shadow: 0 0 12rpx 0 rgba(183, 183, 183, 0.8);
}
.canvas-tips{
  font-size: 24rpx;
  color: #6d6a6a;
  text-align: center;
}